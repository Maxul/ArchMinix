// clocale standard header
#ifndef _CLOCALE_
#define _CLOCALE_
#include <yvals.h>

#ifdef _STD_USING
 #undef _STD_USING
 #define _CPP_STYLE_HEADER     /* for __TI_COMPILER_VERSION__ */
  #include <locale.h>
 #define _STD_USING
 #undef _CPP_STYLE_HEADER      /* for __TI_COMPILER_VERSION__ */

#else /* _STD_USING */
 #include <locale.h>

 #if defined(__BORLANDC__)	/* compiler test */
 #define LC_MESSAGES	(LC_TIME << 1)
 #endif /* defined(__BORLANDC__) */

#ifndef LC_MESSAGES
 #define LC_MESSAGES	(LC_TIME + 1)
#endif /* LC_MESSAGES */

 #ifdef _GLOBAL_USING
_STD_BEGIN
using _CSTD lconv; using _CSTD localeconv; using _CSTD setlocale;
_STD_END
 #endif /* _GLOBAL_USING */

#endif /* _STD_USING */
#endif /* _CLOCALE_ */

